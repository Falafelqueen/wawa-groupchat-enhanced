
<div class="w-fit h-96 p-8 mx-auto bg-white rounded">
  <h2 class="font-bold text-lg text-center">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'w-80'}) do |f| %>
    <div>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded mb-3' %>
    </div>

    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full rounded mb-3' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="text-right mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'block bg-primary text-white py-2 px-10 rounded cursor-pointer mx-auto mb-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
