<div class="flex justify-start" data-controller="message">
  <div class="w-4/6 px-4 py-2 border rounded-lg shadow-md mb-4 bg-primary text-white">
    <%= message.text %>
    <div class="flex justify-between items-center text-sm">
      <p ><strong>From:</strong> <%= message.user.display_name %></p>
      <p>
        <%= time_ago(message.created_at)%>
      </p>
    </div>
  </div>
</div>
