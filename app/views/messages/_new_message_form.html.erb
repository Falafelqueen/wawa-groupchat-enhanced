<%= form_for [chatroom, message], {html: {class: 'flex justify-end align-center gap-3 py-4'}, data: {controller: 'form', action: 'turbo:submit-end->form#clearForm', turbo_frame: "messages_#{chatroom.id}"}} do |f| %>
  <%= f.text_field :text, class: 'w-4/6 border border-slate-300 rounded-md shadow-md' %>
  <%= f.submit  'Send', class: 'hover:bg-primary-dark text-white font-semibold py-2 px-4 rounded cursor-pointer bg-primary'%>
<% end %>
